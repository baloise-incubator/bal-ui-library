{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src",
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "types": ["@baloise/design-system-components"],
    "paths": {
      "@baloise/design-system-components/loader": ["../components/loader"],
      "@baloise/design-system-components": ["../components"],
      "@baloise/design-system-components-angular/common": ["common/src/index.ts"],
      "@baloise/design-system-components-angular/legacy": ["legacy/src/index.ts"],
      "@baloise/design-system-components-angular/standalone": ["standalone/src/index.ts"],
    },
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "compilationMode": "partial",
  },
  "exclude": ["node_modules", "src/schematics"],
  "files": ["src/index.ts"],
}
