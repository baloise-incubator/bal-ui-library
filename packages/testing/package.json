{
  "name": "@baloise/ui-library-testing",
  "version": "4.18.0",
  "description": "The UI-Libary is an open source project for styling awesome web applications that follow the Baloise corporate styling guidelines.",
  "repository": {
    "type": "git",
    "url": "https://github.com/baloise/ui-library.git"
  },
  "homepage": "https://baloise-ui-library.now.sh",
  "author": {
    "name": "Gery Hirschfeld",
    "email": "gerhard.hirschfeld@baloise.ch",
    "url": "https://github.com/hirsch88"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "serve": "cypress open",
    "test": "cypress run",
    "build": "npm run build:clean && npm run build:docs && npm run build:index && npm run build:compile && npm run build:bundle",
    "build:clean": "rimraf src/index.ts && rimraf docs && rimraf dist && rimraf dist-transpiled",
    "build:index": "node .scripts/index.script.js",
    "build:docs": "node .scripts/docs-json.script.js",
    "build:compile": "tsc -p tsconfig.build.json",
    "build:bundle": "rollup --config rollup.config.js",
    "ci": "start-server-and-test ci:server http://localhost:3333 test",
    "ci:server": "http-server ../library/www -p 3333 -c-1 --silent"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/jquery": "^3.5.1",
    "@types/node": "^14.14.6",
    "cypress": "^5.6.0",
    "http-server": "^0.12.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.5",
    "start-server-and-test": "^1.11.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "gitHead": "8bb3a41da0b577e5606f49a45e588a7bd4521eca",
  "dependencies": {
    "@baloise/ui-library": "^4.18.0"
  }
