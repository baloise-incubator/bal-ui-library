{
  "name": "@baloise/ui-library",
  "version": "4.18.1",
  "description": "The UI-Libary is an open source project for styling awesome web applications that follow the Baloise corporate styling guidelines.",
  "repository": {
    "type": "git",
    "url": "https://github.com/baloise/ui-library.git"
  },
  "homepage": "https://baloise-ui-library.now.sh",
  "author": {
    "name": "Gery Hirschfeld",
    "email": "gerhard.hirschfeld@baloise.ch",
    "url": "https://github.com/hirsch88"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ui-library/ui-library.esm.js",
  "files": [
    "dist/",
    "src/styles/",
    "loader/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:filters && npm run build:utils && npm run build:validators && npm run build:icons && npm run build:compile && npm run build:components",
    "build:validators": "node .scripts/validators.script.js && node .scripts/validators.index.js",
    "build:filters": "node .scripts/filters.script.js && node .scripts/filters.index.js",
    "build:utils": "node .scripts/utils.script.js && node .scripts/utils.index.js",
    "build:icons": "node .scripts/icons.script.js",
    "build:components": "node .scripts/components.script.js",
    "build:compile": "stencil build --docs --es5 --prod",
    "clean": "rimraf docs && npm run clean:icons",
    "clean:icons": "rimraf src/components/bal-icon/icons",
    "docs": "npm run build:filters && npm run build:utils && npm run build:validators && npm run docs:compile && npm run build:components",
    "docs:compile": "stencil build --docs --es5 --prod --config stencil.docs.config.ts",
    "docs:examples": "stencil build --es5 --prod --config stencil.examples.config.ts",
    "serve": "stencil build --docs --dev --watch --serve --config stencil.dev.config.ts",
    "test": "stencil test --spec --e2e --config stencil.test.config.ts",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:unit:watch": "stencil test --spec --watchAll",
    "test:e2e:watch": "stencil test --e2e --watchAll"
  },
  "dependencies": {
    "@stencil/core": "^2.5.2",
    "@types/lodash": "^4.14.168",
    "bulma": "^0.9.2",
    "filesize.js": "^2.0.0",
    "lodash": "^4.17.21"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@baloise/angular-output-target": "^1.0.7",
    "@baloise/vue-2-output-target": "^1.0.5",
    "@baloise/vue-output-target": "^0.1.1",
    "@stencil/postcss": "^2.0.0",
    "@stencil/sass": "^1.4.1",
    "@types/autoprefixer": "^9.7.2",
    "@types/jest": "^26.0.20",
    "@types/puppeteer": "^5.4.2",
    "autoprefixer": "^10.2.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "postcss": "^8.2.6",
    "puppeteer": "^5.5.0",
    "rimraf": "^3.0.2",
    "svgo": "^1.3.2"
  },
  "gitHead": "8bb3a41da0b577e5606f49a45e588a7bd4521eca"
}
