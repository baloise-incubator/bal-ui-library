{
  "name": "@baloise/design-system-components",
  "version": "2.0.4",
  "description": "The Baloise Design-System  is an open source project for styling awesome web applications that follow the Baloise corporate styling guidelines.",
  "repository": {
    "type": "git",
    "url": "https://github.com/baloise/design-system.git"
  },
  "homepage": "https://design.baloise.dev",
  "author": {
    "name": "Gery Hirschfeld",
    "email": "gerhard.hirschfeld@baloise.ch",
    "url": "https://github.com/hirsch88"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design-system",
    "web-components",
    "stenciljs",
    "bulma-css"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/design-system-components/design-system-components.esm.js",
  "files": [
    "dist/",
    "src/styles/",
    "loader/"
  ],
  "scripts": {
    "build": "npm run clean && npm run copy:fonts && npm run build:compile && npm run build:components",
    "build:components": "node .scripts/components.script.js",
    "build:compile": "stencil build --docs --prod",
    "clean": "rimraf docs",
    "log": "stencil build --prod --config stencil.log.config.ts",
    "copy:fonts": "copyfiles --flat node_modules/@baloise/design-system-fonts/lib/* src/assets/fonts",
    "docs": "npm run docs:compile && npm run build:components",
    "docs:compile": "stencil build --docs --prod --config stencil.docs.config.ts",
    "docs:sandbox": "npm run copy:fonts && stencil build --prod --config stencil.sandbox.config.ts",
    "serve": "npm run copy:fonts && stencil build --docs --dev --watch --serve --config stencil.dev.config.ts",
    "test": "stencil test --spec --e2e --config stencil.test.config.ts",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:unit": "stencil test --spec",
    "test:unit:watch": "stencil test --spec --watchAll",
    "test:e2e": "stencil test --e2e",
    "test:e2e:watch": "stencil test --e2e --watchAll",
    "update:registry": "sed -i -e \"s#nexus.balgroupit.com/repository/npm#registry.npmjs.org#g\" package-lock.json\n"
  },
  "dependencies": {
    "@baloise/design-system-fonts": "2.0.4",
    "@baloise/design-system-icons": "2.0.4",
    "@baloise/web-app-utils": "^1.9.1",
    "@stencil/core": "^2.10.0",
    "bulma": "^0.9.3",
    "filesize.js": "^2.0.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.capitalize": "^4.2.1",
    "lodash.isarray": "^4.0.0",
    "lodash.isempty": "^4.4.0",
    "lodash.isnil": "^4.0.0",
    "lodash.isstring": "^4.0.1",
    "lodash.lowercase": "^4.3.0",
    "lodash.round": "^4.0.4",
    "lodash.trim": "^4.5.1",
    "lodash.upperfirst": "^4.3.1"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@baloise/angular-output-target": "^1.0.15",
    "@baloise/vue-output-target": "^0.2.6",
    "@stencil/postcss": "^2.1.0",
    "@stencil/react-output-target": "^0.1.0",
    "@stencil/sass": "^1.5.2",
    "@types/autoprefixer": "^10.2.0",
    "@types/jest": "^26.0.24",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.capitalize": "^4.2.6",
    "@types/lodash.isarray": "^4.0.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/lodash.isnil": "^4.0.6",
    "@types/lodash.isstring": "^4.0.6",
    "@types/lodash.lowercase": "^4.3.6",
    "@types/lodash.round": "^4.0.6",
    "@types/lodash.trim": "^4.5.6",
    "@types/lodash.upperfirst": "^4.3.6",
    "@types/puppeteer": "^5.4.4",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "puppeteer": "^10.4.0",
    "rimraf": "^3.0.2"
  },
  "gitHead": "8bb3a41da0b577e5606f49a45e588a7bd4521eca"
}
