  },
  "dependencies": {
    "@baloise/design-system-components-table": "^1.11.0",
    "vue-tabs-component": "^1.5.0",
    "vuepress-plugin-tabs": "^0.3.0"
  },
  "resolutions": {
    "glob-parent": ">=5.1.2"
